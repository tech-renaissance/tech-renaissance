{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "TR_BUILD_TESTS": "ON",
        "TR_BUILD_UTILS": "ON",
        "TR_USE_CUDA": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows-msvc-debug",
      "inherits": "base",
      "displayName": "Windows MSVC Debug",
      "description": "Windows using MSVC compiler (Debug)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "cl",
        "TR_USE_CUDA": "ON"
      }
    },
    {
      "name": "windows-msvc-release",
      "inherits": "base",
      "displayName": "Windows MSVC Release",
      "description": "Windows using MSVC compiler (Release)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "cl",
        "TR_USE_CUDA": "ON"
      }
    },
    {
      "name": "windows-msys2-debug",
      "inherits": "base",
      "displayName": "Windows MSYS2 GCC Debug",
      "description": "Windows using MSYS2 GCC compiler (Debug) - CUDA disabled due to Windows CUDA+MSVC compatibility requirements",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "TR_USE_CUDA": "OFF"
      }
    },
    {
      "name": "windows-msys2-release",
      "inherits": "base",
      "displayName": "Windows MSYS2 GCC Release",
      "description": "Windows using MSYS2 GCC compiler (Release) - CUDA disabled due to Windows CUDA+MSVC compatibility requirements",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "TR_USE_CUDA": "OFF"
      }
    },
    {
      "name": "linux-gcc-debug",
      "inherits": "base",
      "displayName": "Linux GCC Debug",
      "description": "Linux using GCC compiler (Debug)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++-13",
        "TR_USE_CUDA": "ON"
      }
    },
    {
      "name": "linux-gcc-release",
      "inherits": "base",
      "displayName": "Linux GCC Release",
      "description": "Linux using GCC compiler (Release)",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++-13",
        "TR_USE_CUDA": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-msvc-release",
      "configurePreset": "windows-msvc-release"
    },
    {
      "name": "windows-msys2-release",
      "configurePreset": "windows-msys2-release"
    },
    {
      "name": "linux-gcc-release",
      "configurePreset": "linux-gcc-release"
    }
  ]
}